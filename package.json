{
  "name": "motivational-and-inspirational-quotes",
  "displayName": "Motivational and Inspirational Quotes (Muslim)",
  "description": "This is a test quotes extension",
  "version": "0.0.1",
  "icon": "icon.webp",
  "publisher": "azmolla",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "motivational-and-inspirational-quotes.showRandomQuote",
        "title": "Show Random Quote"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Motivational Quotes Configuration",
      "properties": {
        "motivationalQuotes.defaultLanguage": {
          "type": "string",
          "default": "en",
          "description": "Default language for the quotes",
          "enum": [
            "en",
            "bn"
          ],
          "enumDescriptions": [
            "English",
            "Bangla"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AbiruzzamanMolla/motivational-and-inspirational-quotes.git"
  },
  "homepage": "https://marketplace.visualstudio.com/publishers/azmolla"
}
